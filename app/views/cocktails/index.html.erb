<h1>Fancy Cocktails</h1>
<div class="banner">
<%= cl_image_tag("https://res.cloudinary.com/dhx9nosst/image/upload/v1558703741/dthh6xrixmbmp1fwhseu.jpg") %>
</div>
<% @cocktails.each do |cocktail| %>

  <h3><%= cocktail.name %></h3>
  <br>
  <%= cl_image_tag cocktail.photo, height: 30, width: 40, crop: :fill %>
  <button><%= link_to "Details", cocktail_path(cocktail) %></button>

<% end %>

<button><%= link_to "Add a new cocktail", new_cocktail_path %></button>
