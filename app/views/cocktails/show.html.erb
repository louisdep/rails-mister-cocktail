
<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> <%= dose.description %></p>

<button><%= link_to "Delete dose", dose_path(dose), :method => 'delete', data: { confirm: "Are you sure? "} %></button>

<% end %>
<br>
<%= link_to "Add doses to a cocktail", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Overview cocktails", cocktails_path %>
